

SELECT s.passenger_lyft_id AS user_lyft_id,
    s.START_AT as occurred_at,
    CASE WHEN s.rides_requested_cnt > 0 THEN 1 else 0 END AS metric_numerator,
    CASE WHEN (s.set_destination_cnt > 0 AND (is_x = FALSE OR is_x IS NULL)) OR (s.set_pickup_cnt > 0 AND is_x = TRUE) OR (b.event_id IS NOT NULL AND is_x = TRUE) THEN 1 else 0 END AS metric_denominator
FROM core.all_pax_sessions s
LEFT JOIN pax_events_annotated.event_client_action b
ON b.session_id = s.session_id
    AND b.action = 'confirm_mode'
    AND b.result = 'success'
    AND b.ds >= 'xxxxxxx'
WHERE s.ds >= 'xxxxxx'
    AND s.is_valid_session = TRUE
    AND s.passenger_lyft_id IS NOT NULL


